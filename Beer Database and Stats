--DISPLAY databse by prices in ascending order
SELECT * FROM BEERS ORDER BY price ASC;

-- what is total pirce from coutries 
SELECT COUNTRY, SUM(price) FROM BEERS GROUP BY COUNTRY;

--DIPLAYS average price of stout beer from 
SELECT AVG(price) "avg stout price"
FROM BEERS
where style ='STOUT';

